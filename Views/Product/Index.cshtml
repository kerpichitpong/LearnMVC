@model IEnumerable<LearnMVC.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-10">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add Product</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:auto%">
            <thead>
                <tr>
                    <th>
                        Category
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Product in Model)
                {
                    <tr>
                        <td>@Product.Category</td>
                        <td>
                            @if (!string.IsNullOrEmpty(Product.ImageUrl))
                            {
                                <img src="@Product.ImageUrl" alt="@Product.ProductName" style="width:100px; height:auto;" />
                            }
                        </td>
                        <td>@Product.ProductName</td>
                        <td>@Product.ProductDescription</td>
                        <td>@Product.Price</td>
                        <td>@Product.StockQuantity</td>
                        <td>
                            <a class="btn btn-info" asp-action="Update" asp-route-id="@Product.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Product.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Created</p>
    }
</div>
